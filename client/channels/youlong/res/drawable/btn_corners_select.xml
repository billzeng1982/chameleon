<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
	     <solid android:color="@color/skin_blue_btn_press" />
	     <corners android:radius="@dimen/corners_size_4dp" />    
		</shape>
    </item>
    <item android:state_enabled="false">
        <shape>
	     <solid android:color="@color/skin_blue_btn_unclick" />
	     <corners android:radius="@dimen/corners_size_4dp" />    
		</shape>
    </item>
    <item >
        <shape>
	     <solid android:color="@color/skin_blue_btn_normal" />
	     <corners android:radius="@dimen/corners_size_4dp" />    
		</shape>
    </item>
</selector>
