<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"  
 android:layout_width="fill_parent"  
 android:layout_height="fill_parent"  
 android:fadingEdge="vertical">  
 
<RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/cw_pay_card_sel_btn_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@id/cw_pay_card_10_rb"
        android:orientation="horizontal" >
        
        <Button
            android:id="@+id/cw_pay_cmcc_btn"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/cw_pay_phonecard_btn_nor"
            android:gravity="center"
            android:text="@string/cw_title_pay_cmcc"  
            android:textColor="@color/cw_black"/>

        <Button
            android:id="@+id/cw_pay_cucc_btn"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/cw_pay_phonecard_btn_nor"
            android:gravity="center"
            android:text="@string/cw_title_pay_cucc" 
            android:textColor="@color/cw_black"/>
       </LinearLayout> 
    
    <TextView
        android:id="@+id/cw_pay_card_choose_type_tip_tv"
        style="@style/cw_normal_textview"
        android:layout_width="fill_parent"
        android:layout_height="32dip"
        android:layout_marginLeft="15dip"
        android:layout_below="@id/cw_pay_card_sel_btn_layout"
        android:gravity="center_vertical"
        android:textColor="@color/cw_tip_color" />

    <LinearLayout
        android:id="@+id/cw_pay_card_first_group_rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cw_pay_card_choose_type_tip_tv"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:checkedButton="@id/cw_pay_card_10_rb"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_card_10_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:checked="true"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_10_yuan" 
            android:textColor="@color/cw_black"/>

        <RadioButton
            android:id="@+id/cw_pay_card_30_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_30_yuan" 
            android:textColor="@color/cw_black"/>

        <RadioButton
            android:id="@+id/cw_pay_card_50_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_50_yuan"
            android:textColor="@color/cw_black" />

        <RadioButton
            android:id="@+id/cw_pay_card_100_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_100_yuan"
            android:textColor="@color/cw_black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cw_pay_card_second_group_rg"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cw_pay_card_first_group_rg"
        android:layout_marginTop="10dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/cw_pay_card_300_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_300_yuan" 
            android:textColor="@color/cw_black"/>

        <RadioButton
            android:id="@+id/cw_pay_card_500_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_500_yuan"
            android:textColor="@color/cw_black" />

        <RadioButton
            android:id="@+id/cw_pay_card_1000_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_1000_yuan"
            android:visibility="invisible"
            android:textColor="@color/cw_black" />

        <RadioButton
            android:id="@+id/cw_pay_card_1500_rb"
            android:button="@null"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/cw_radio"
            android:gravity="center"
            android:text="@string/cw_1500_yuan"
            android:visibility="invisible" 
            android:textColor="@color/cw_black"/>
    </LinearLayout>

    <TextView
        android:id="@+id/cw_pay_card_rate_tip_tv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/cw_pay_card_second_group_rg"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:textColor="@color/cw_tip_color" />

<!--     <TextView
        android:id="@+id/cw_pay_card_choose_tip_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cw_pay_card_rate_tip_tv"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:textColor="@color/cw_black"
        android:visibility="gone" /> -->

    <EditText
        android:id="@+id/cw_pay_card_serial_et"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_below="@id/cw_pay_card_rate_tip_tv"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:layout_marginRight="120dip"
        android:background="@drawable/cw_pay_input_eg"
        android:hint="@string/cw_input_card"
        android:inputType="number"
        android:maxLength="30"
        android:paddingLeft="5dip"
        android:textColor="@color/cw_black"
        android:singleLine="true"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/cw_pay_card_pwd_et"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:layout_below="@id/cw_pay_card_serial_et"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="120dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/cw_pay_input_eg"
        android:hint="@string/cw_input_pwd"
        android:inputType="number"
        android:maxLength="30"
        android:textColor="@color/cw_black"
        android:paddingLeft="5dip"
        android:singleLine="true"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="180dip"
        android:layout_height="60dip"
        android:layout_marginLeft="15dip" 
        android:id="@+id/cw_pay_card_btn_layout"
        android:layout_below="@id/cw_pay_card_pwd_et"     
        >

        <Button
            android:id="@+id/cw_pay_card_go_pay_btn"
            style="@style/cw_button_blod_white_text"
            android:layout_width="160dip"
            android:layout_height="40dip"
            android:layout_marginTop="10dip"
            android:background="@drawable/cw_tip_dialog_btn"
            android:shadowColor="#ff891f02"
            android:shadowDy="1"
            android:text="@string/cw_pay"
            android:textColor="@color/cw_white"/>
    </LinearLayout>
    
        <TextView
        android:id="@+id/cw_pay_card_intro_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="5dip"
        android:paddingBottom="5dip"
        android:layout_below="@id/cw_pay_card_btn_layout"  
        android:text="@string/cw_pay_intro"
        android:textColor="@color/cw_black" />
        
        <TextView
        android:id="@+id/cw_pay_card_choose_tip_tv"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cw_pay_card_intro_tv"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="5dip"
        android:gravity="center_vertical"
        android:textColor="@color/cw_black"/>

</RelativeLayout>
</ScrollView>
