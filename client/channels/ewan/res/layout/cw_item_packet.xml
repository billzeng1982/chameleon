<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center_vertical"
    android:background="@color/cw_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/cw_item_total_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" 
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        
    <ImageView
        android:id="@+id/cw_item_game_icon_iv"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_marginTop="10dip"  
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:contentDescription="@string/cw_about_detail"
        android:scaleType="fitXY" />


    <LinearLayout
        android:id="@+id/cw_item_content_layout"
        android:layout_width="200dp"
        android:layout_height="80dip" 
        android:layout_marginLeft="75dip" 
        android:layout_marginRight="50dip" 
        android:layout_marginTop="5dip"   
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cw_item_packet_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cw_about_detail"
            android:text="@string/cw_test"
            android:shadowColor="@color/cw_tip_color"
            android:shadowDy="1"
            android:shadowRadius="1"
            android:textColor="@color/cw_tip_color"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cw_item_packet_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip" 
            android:contentDescription="@string/cw_about_detail"            
            android:gravity="left"
            android:textColor="@color/cw_tip_color"
            android:singleLine="false"
            android:textSize="14sp" />
    </LinearLayout>
   
    

        
    <Button
        android:id="@+id/cw_item_btn_icon_iv"
        android:layout_width="80dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dip" 
        android:contentDescription="@string/cw_about_detail"
        android:padding="4dip"
        android:textSize="16sp"
        android:textColor="@drawable/cw_packet_get_btn_font_style"/>
   	
	</RelativeLayout>
	
    <LinearLayout
        android:id="@+id/cw_item_line_layout"
        android:layout_width="fill_parent"
        android:layout_height="1dip" 
        android:layout_marginTop="86dip" 
        android:background="@color/cw_background">
	</LinearLayout>
	
</RelativeLayout>