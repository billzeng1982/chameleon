<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.lenovo.newui.PayHubActivity" >

    <LinearLayout
        android:id="@+id/common_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical" >

        <include
            android:id="@+id/title_layout"
            layout="@layout/layout_titlebar_pay_hub" />

        <ScrollView
            android:id="@+id/sl_pay_hub"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/ll_pay_hub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/rl_pay_hub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/rl_pay_hub2"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dip"
                        android:layout_marginTop="25dip"
                        android:orientation="vertical" >

                        <!-- 商品名称 -->
                        <LinearLayout
                            android:id="@+id/linear_goods"
                            android:layout_width="239dip"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dip" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payhub_goods_name"
                                android:textColor="@color/text_color_black"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/tv_goods_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_2"
                                android:text="周卡礼包"
                                android:textColor="@color/text_color_black"
                                android:textSize="21sp" />
                            
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/linear_order_price"
                            android:layout_width="239dip"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/linear_goods"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payhub_order_price"
                                android:textColor="@color/text_color_black"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/tv_goods_v_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_2"
                                android:text="980"
                                android:textColor="@color/text_color_orange"
                                android:textSize="21sp" />

                            <TextView
                                android:id="@+id/tv_v_bi_unit1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="#757575"
                                android:textSize="21sp" />

                            <ImageButton
                                android:id="@+id/Spinner_fee_list"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="6dip"
                                android:layout_marginLeft="5dp"
                                android:background="@null"
                                android:contentDescription="@null"
                                android:gravity="center_vertical"
                                android:src="@drawable/icon_fee_selector_list"
                                android:visibility="gone" >
                            </ImageButton>
                        </LinearLayout>
                        
                        <LinearLayout
                            android:id="@+id/linear_order_price_temp"
                            android:layout_width="239dip"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/linear_order_price"
                            android:layout_marginBottom="7dip"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payhub_order_price"
                                android:textColor="@color/text_color_black"
                                android:visibility="invisible" 
                                android:textSize="21sp" />

                                <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_2"
                                android:text="@string/payhub_right_bracket"
                                android:textColor="#757575"
                                android:textSize="12sp" />
                            
                            <TextView
                                android:id="@+id/tv_goods_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="98.00"
                                android:textColor="#757575"
                                android:textSize="12sp" />
                            
                             <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payhub_yuan_bracket"
                                android:textColor="#757575"
                                android:textSize="12sp" />
                            
                        </LinearLayout>
                        
                        <!-- 折扣 -->
                        <LinearLayout
                            android:id="@+id/layout_pay_type_discount"
                            android:layout_width="239dip"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/linear_order_price_temp"
                            android:layout_marginBottom="7dip"
                            android:gravity="center_vertical" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payhub_order_price_discount"
                                android:textColor="@color/text_color_black"
                                android:textSize="12sp" />

             			<TextView
			                android:id="@+id/tv_pay_type_discount"
			                android:layout_width="wrap_content"
			                android:layout_height="wrap_content"
			                android:layout_marginLeft="5dp"
			                android:gravity="center_vertical"
			                android:layout_gravity="center_vertical"
			                android:text="9折"
			                android:textColor="@color/text_color_black"
			                android:textSize="12sp" />
                        </LinearLayout>
                        

                        <!-- 分割线 -->
                        <View
                            android:id="@+id/view_gray_line"
                            android:layout_width="fill_parent"
                            android:layout_height="1dip"
                            android:layout_below="@id/layout_pay_type_discount"
                            android:layout_marginBottom="12dip"
                            android:layout_marginRight="18dip"
                            android:background="#d1d1d1" >
                        </View>

                        <!-- 支付分析 -->
                        <LinearLayout
                            android:id="@+id/linearlayout_balance"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/view_gray_line"
                            android:layout_marginRight="18dip"
                            android:orientation="horizontal" >

                            <LinearLayout
                                android:id="@+id/ll_pay_hub2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <LinearLayout
                                    android:id="@+id/ll_pay_hub3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="12dip"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal" >

                                    <LinearLayout
                                        android:id="@+id/checkbox_is_use_balance_layout"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" >

                                        <ImageView
                                            android:id="@+id/checkbox_is_use_balance"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="12dip"
                                            android:background="@drawable/checkbox_if_use_balance_normal"
                                            android:visibility="visible" />
                                    </LinearLayout>

                                    <TextView
                                        android:id="@+id/tv_payhub_use_balance_pay"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/payhub_use_balance_pay"
                                        android:textColor="#757575"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/tv_v_bi_balance"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="982 "
                                        android:textColor="@color/text_color_orange"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/tv_v_bi_unit2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="@dimen/margin_2"
                                        android:textColor="#757575"
                                        android:textSize="18sp" />
                                </LinearLayout>
                                <!-- 还需支付金额布局 -->
                                <LinearLayout
                                    android:id="@+id/layout_v_bi_remain"
                                    android:layout_marginBottom="12dip"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical" >

                                    <LinearLayout
                                        android:id="@+id/ll_pay_hub4"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" >

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginRight="12dip"
                                            android:background="@drawable/checkbox_if_use_balance_normal"
                                            android:visibility="invisible" />
                                    </LinearLayout>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/payhub_use_remain_pay"
                                        android:textColor="#757575"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/tv_v_bi_remain"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="480"
                                        android:textColor="@color/text_color_orange"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:id="@+id/tv_v_bi_unit3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#757575"
                                        android:textSize="18sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/payhub_left_bracket"
                                        android:textColor="#757575"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:id="@+id/tv_goods_remain"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=" 48.00"
                                        android:textColor="#757575"
                                        android:textSize="12sp" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/payhub_yuan_bracket"
                                        android:textColor="#757575"
                                        android:textSize="12sp" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_pay_hub5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/linearlayout_balance"
                            android:gravity="center_vertical" >

                            <LinearLayout
                                android:id="@+id/ll_pay_hub6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginRight="12dip"
                                    android:background="@drawable/checkbox_if_use_balance_normal"
                                    android:visibility="invisible" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_cp_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/payhub_service_tel"
                                android:textColor="#757575"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <com.lenovo.pay.mobile.iapppaysecservice.activity.views.RemoteImageView
                        android:id="@+id/remoteImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="4dp" >
                    </com.lenovo.pay.mobile.iapppaysecservice.activity.views.RemoteImageView>
                </RelativeLayout>

                <!-- 支付方式前面的分割线 -->

                <View
                    android:id="@+id/view_gray_bar"
                    android:layout_width="match_parent"
                    android:layout_height="10dip"
                    android:layout_marginTop="25dip"
                    android:background="#e9e9e9" />

                <com.lenovo.pay.mobile.iapppaysecservice.activity.views.BaseGridView
                    android:id="@+id/gridview_chargelist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dip"
                    android:cacheColorHint="@color/transparent_all"
                    android:fadeScrollbars="true"
                    android:fadingEdge="none"
                    android:gravity="center_horizontal"
                    android:listSelector="@color/transparent_all"
                    android:numColumns="5"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/button_v_bi_pay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_margin="18dp"
        android:background="@drawable/selector_button_pay_hub"
        android:gravity="center"
        android:text="@string/payhub_V_Bi_pay"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_16" >
    </Button>

</RelativeLayout>