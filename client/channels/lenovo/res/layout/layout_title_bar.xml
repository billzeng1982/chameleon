<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="@dimen/title_height"
    android:background="@color/title_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/title_bar_left_rl"
        android:background="@drawable/bg_layout_title_color"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/title_bar_left_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/button_titlebar_back" />

        <TextView
            android:id="@+id/title_bar_left_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="10dip"
            android:textSize="@dimen/size_left"
            android:layout_toRightOf="@+id/title_bar_left_iv"
            android:textColor="@color/white"
            android:text="选择充值方式" />
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/title_bar_right_layout"
        android:background="@drawable/bg_layout_title_color"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true" >

        <TextView
            android:id="@+id/title_bar_right_tv"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:text="交易记录"
            android:textSize="@dimen/size_right"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    
</RelativeLayout>