<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEFF1"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/anfan_manager_personal_information"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:background="@drawable/af_user_bg" >

            <ImageView
                android:id="@+id/anfan_manager_img1"
                android:layout_width="83dp"
                android:layout_height="83dp"
                android:layout_centerInParent="true"
                android:background="@drawable/anfan_def_user"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/anfan_manager_img2"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_centerInParent="true"
                android:background="@drawable/anfan_user_mask"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/anfan_manager_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/anfan_manager_img2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="3dp"
                android:textColor="@color/TextColorWhite"
                android:textSize="20dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/anfan_shape_manager"
            android:orientation="vertical" >

                

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                >

                <TextView
                    android:id="@+id/anfan_manager_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:minEms="4"
                    android:text="@string/anfan_phone_num"
                    android:textColor="@color/anfan_c999999"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/anfan_manager_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/anfan_manager_phone"
                    android:text="@string/anfan_no_bound"
                    android:textColor="@color/anfan_c2C3E50"
                    android:textSize="18dp" />
            </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#D9DDE1" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="51dp"
                >


                <TextView
                    android:id="@+id/anfan_manager_gold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:minEms="4"
                    android:text="@string/anfan_balance"
                    android:textColor="@color/anfan_c999999"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/anfan_manager_gold_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/anfan_manager_gold"
                    android:textColor="#39C5A9"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/anfan_manager_gold_num_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/anfan_manager_gold_num"
                    android:text="@string/anfan_fmoney"
                    android:textColor="@color/anfan_c2C3E50"
                    android:textSize="18dp" />
 
            </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#D9DDE1" />
            <RelativeLayout
                android:id="@+id/anfan_manager_uppass"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:minEms="4"
                    android:text="@string/anfan_update_pwd"
                    android:textColor="@color/anfan_c999999"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@drawable/af_info_aow" />
            </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="#D9DDE1" />

            <RelativeLayout
                android:id="@+id/anfan_manager_game_record"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="right"
                    android:minEms="4"
                    android:text="@string/anfan_pay_record"
                    android:textColor="@color/anfan_c999999"
                    android:textSize="18dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/af_info_aow" />

            </RelativeLayout>
                
        </LinearLayout>

        <Button
            android:id="@+id/anfan_manager_change"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@color/anfan_c999999"
            android:text="@string/anfan_change_account"
            android:textColor="@color/TextColorWhite"
            android:textSize="20dp" />
    </LinearLayout>

</ScrollView>