        <Button
            android:id="@+id/anzhi_bn_ok"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_40"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_weight="0.5"
            android:background="@drawable/anzhi_button_bg_blue"
            android:text="@string/anzhi_login_bind_account"
            android:textColor="@android:color/white"
            android:textSize="@dimen/font_18" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_20"
            android:layout_marginRight="@dimen/size_20"
            android:layout_marginTop="@dimen/size_20"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/anzhi_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="0.5"
                android:text="@string/anzhi_register_syncalready"
                android:textColor="@color/anzhi_0294f0"
                android:textSize="@dimen/font_18" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>