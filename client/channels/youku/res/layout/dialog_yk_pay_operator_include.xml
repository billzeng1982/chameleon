<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">
    <LinearLayout android:id="@+id/yk_pay_operator_content_linear"
        android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:orientation="vertical">
		<LinearLayout android:id="@+id/yk_pay_operator_logo_linear"
	        android:layout_width="@dimen/yk_xh_427px"
			android:layout_height="wrap_content" 
			android:orientation="horizontal">
			<LinearLayout android:id="@+id/yk_pay_logo_chinamobile_layout"
			    android:layout_width="@dimen/yk_xh_138px"
				android:layout_height="@dimen/yk_xh_58px"
				android:background="@drawable/yk_pay_operator_unselected"
				android:layout_marginRight="@dimen/yk_xh_7px"
				android:gravity="center">
			    <ImageView android:id="@+id/yk_pay_logo_chinamobile_img"
			        android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/yk_pay_logo_chinamobile"/>
		    </LinearLayout>
		    <LinearLayout android:id="@+id/yk_pay_logo_chinaunicom_layout"
			    android:layout_width="@dimen/yk_xh_138px"
				android:layout_height="@dimen/yk_xh_58px"
				android:background="@drawable/yk_pay_operator_unselected"
				android:layout_marginRight="@dimen/yk_xh_7px"
				android:gravity="center">			    <ImageView android:id="@+id/yk_pay_logo_chinaunicom_img"
			        android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/yk_pay_logo_chinaunicom"/>
			</LinearLayout>		    <LinearLayout android:id="@+id/yk_pay_logo_chinatelecom_layout"
			    android:layout_width="@dimen/yk_xh_138px"
				android:layout_height="@dimen/yk_xh_58px"
				android:background="@drawable/yk_pay_operator_unselected"
				android:gravity="center">			    <ImageView android:id="@+id/yk_pay_logo_chinatelecom_img"
			        android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/yk_pay_logo_chinatelecom"/>
			</LinearLayout>		</LinearLayout>
		<TextView  android:id="@+id/yk_pay_operator_tip_txt"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/yk_text_prompt_yd_lt_ykt"
			android:textColor="#b3b3b3"
			android:textSize="@dimen/yk_xh_20px"
			android:layout_marginTop="@dimen/yk_xh_7px"/>
		<RelativeLayout android:id="@+id/yk_pay_operator_amount_spinner_layout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
		    <TextView android:id="@+id/yk_pay_operator_amount_tip"
		        android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/yk_text_mzyuan"
			    android:textColor="#b3b3b3"
			    android:textSize="@dimen/yk_xh_26px"
			    android:layout_alignBottom="@+id/yk_pay_operator_amount_spinner"/>
			<Spinner android:id="@+id/yk_pay_operator_amount_spinner"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/yk_spinner_bg"
			    android:paddingTop="@dimen/yk_xh_26px"
			    android:paddingLeft="@dimen/yk_xh_10px"
			    android:gravity="bottom"
			    android:layout_toRightOf="@+id/yk_pay_operator_amount_tip"/>
		</RelativeLayout>
		<EditText android:id="@+id/yk_pay_operator_cardnum_edt"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:hint="@string/yk_text_hint_card_no"
		    android:inputType="number"
		    android:textSize="@dimen/yk_xh_26px"
		    android:textColorHint="@color/edit_text_hint"
			android:background="@null"
			android:singleLine="true"
			android:maxLength="20"
			android:paddingLeft="@dimen/yk_xh_10px"
			android:paddingTop="@dimen/yk_xh_26px"/>
		<include layout="@layout/yk_edt_line_include"/>
		<EditText android:id="@+id/yk_pay_operator_cardkey_edt"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:hint="@string/yk_text_hint_pwd"
		    android:inputType="number"
		    android:textSize="@dimen/yk_xh_26px"
		    android:textColorHint="@color/edit_text_hint"
			android:background="@null"
			android:singleLine="true"
			android:maxLength="20"
			android:paddingLeft="@dimen/yk_xh_10px"
			android:paddingTop="@dimen/yk_xh_26px"/>
		<include layout="@layout/yk_edt_line_include"/>
	</LinearLayout>
</LinearLayout>