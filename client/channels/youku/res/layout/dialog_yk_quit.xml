<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" 
  android:layout_width="@dimen/yk_dlg_width"
  android:background="@color/ykbgColor"
   android:orientation="vertical">
   <include layout="@layout/yk_title_include"/> 
   <LinearLayout 
     android:layout_height="1dp"
    android:layout_width="fill_parent"
    android:background="@color/title_line"></LinearLayout>
   
	  <TextView android:id="@+id/yk_quit_baner"
			   	android:layout_width="fill_parent"
		     	android:layout_height="@dimen/yk_xh_300px"/>
	  
	  <TextView android:id="@+id/yk_quit_baner_text"
			   	android:layout_width="fill_parent"
		     	android:layout_height="@dimen/yk_xh_150px"
		     	android:textSize="@dimen/yk_xh_28px"
		     	android:layout_gravity="center_horizontal|center_vertical"
		     	android:gravity="center_horizontal|center_vertical"
		     	android:visibility="gone"/>
   <LinearLayout 
     android:layout_height="1dp"
    android:layout_width="fill_parent"
    android:background="@color/title_line_bellow"></LinearLayout>
  
  <LinearLayout
    android:layout_height="@dimen/yk_loading_btn_height"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:background="#FFFFFFFF" >
      <Button
       android:layout_height="fill_parent"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:background="@drawable/yk_btn_white_selector"
      android:text="@string/yk_text_btn_quit"
      android:textColor="@color/loading_btn_cancel"
      android:textSize="@dimen/yk_btn_font_size"
      android:id="@+id/btn_quit" />
      <LinearLayout 
     android:layout_height="fill_parent"
    android:layout_width="1dp"
    android:background="@color/title_line_bellow"></LinearLayout>
    <Button
      android:layout_height="fill_parent"
      android:layout_width="0dp"
      android:layout_weight="1"
      android:background="@drawable/yk_btn_light_blue_selector"
      android:text="@string/yk_text_btn_qx"
      android:textColor="@color/loading_btn_cancel"
      android:textSize="@dimen/yk_btn_font_size"
      android:id="@+id/btn_cancel" />
  </LinearLayout>
</LinearLayout>

