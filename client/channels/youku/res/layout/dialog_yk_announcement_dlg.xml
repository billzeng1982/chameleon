<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/yk_dlg_width"
    android:layout_height="@dimen/yk_xh_735px"
    android:background="@color/ykbgColor"
    android:orientation="vertical" >

	<RelativeLayout 
    android:layout_height="@dimen/yk_title_height"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="@dimen/yk_title_icon_margin_left"
    android:layout_marginRight="@dimen/yk_title_icon_margin_right"
    android:layout_width="@dimen/yk_dlg_width">
    <LinearLayout 
        android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:layout_centerVertical="true"
    android:id="@+id/lv_img">
        <ImageView
    android:layout_gravity="center_vertical"
    android:layout_height="@dimen/yk_xh_44px_iconhigh"
    android:layout_width="@dimen/yk_xh_88px_iconwidth"
    android:id="@+id/yk_icon_title"
    android:src="@drawable/yk_icon_title"/>
    </LinearLayout>
  <TextView
    android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:gravity="center_vertical"
    android:textSize="@dimen/yk_tv_title_font_size"
    android:textColor="@color/TextColorBlack"
    android:id="@+id/tv_title_text"
    android:layout_centerHorizontal="true"
    android:text="@string/yk_text_ykyx_user_title"/>
  <Button
       android:layout_marginTop="@dimen/yk_title_margin_top"
    android:layout_height="@dimen/yk_xh_44px_iconhigh"
    android:layout_width="@dimen/yk_xh_44px_iconhigh"
    android:layout_centerVertical="true"
    android:id="@+id/back"
    android:visibility="invisible"
    android:layout_alignParentRight="true"
    android:layout_marginRight="@dimen/yk_xh_10px"
    android:padding="3dp"
    android:background="@drawable/yk_btn_announcement_title_back_selector"/>
  </RelativeLayout>
  <LinearLayout 
     android:layout_height="1dp"
    android:layout_width="fill_parent"
    android:background="@color/title_line"></LinearLayout>
  
	<RelativeLayout
			android:layout_width="fill_parent"
	    	android:layout_height="@dimen/yk_xh_550px">
	     	<ListView 
	     	    android:id="@+id/yk_announcement_list"
	     	    android:layout_width="fill_parent"
	     	    android:layout_height="wrap_content"
	     	    android:layout_marginBottom="@dimen/yk_xh_20px"
	     	    android:scrollbars="none">
	     	</ListView>
	</RelativeLayout>
</LinearLayout>