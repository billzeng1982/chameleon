<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cmmn_black"
    android:orientation="vertical"
    android:paddingLeft="80dp"
    android:paddingRight="80dp" >

    <!-- 账号 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/jolo_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="11dp" >
		
        <ImageView
	        android:id="@+id/action_bar_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/jolo_account" />

        <EditText
            android:id="@+id/register_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:digits="@string/jolo_register_digits"
            android:gravity="center_vertical"
            android:hint="@string/jolo_register_name_hint"
            android:imeOptions="actionNext"
            android:inputType="textVisiblePassword"
            android:maxLength="20"
            android:padding="7dp"
            android:singleLine="true"
            android:textSize="16sp"
            android:textColor="@color/color_tv"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
    </LinearLayout>
    <!-- 密码 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:addStatesFromChildren="true"
        android:background="@drawable/jolo_edit_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="11dp" >
        
		<ImageView
	        android:id="@+id/action_bar_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="5dp"
	        android:background="@drawable/jolo_pwd" />
		
        <EditText
            android:id="@+id/register_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:digits="@string/jolo_register_digits"
            android:gravity="center_vertical"
            android:hint="@string/jolo_register_pwd_hint"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="20"
            android:padding="7dp"
            android:textSize="16sp"
            android:singleLine="true"
            android:textColor="@color/color_tv"
            android:textColorHint="@color/hint_color"
            android:textCursorDrawable="@null" />
    </LinearLayout>
	<LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp" >
    </LinearLayout>
    
	<Button
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/jolo_orange_bg"
	    android:gravity="center"
	    android:layout_marginTop="15dp"
	    android:paddingTop="8dp"
        android:paddingBottom="8dp"
	    android:onClick="doRegister"
	    android:textSize="18sp"
	    android:text="@string/jolo_register_register_btn"
	    android:textColor="@color/jolo_white" />
    
</LinearLayout>